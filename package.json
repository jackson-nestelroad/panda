{
  "name": "panda-discord-bot",
  "version": "1.0.0",
  "description": "Command framework for building Discord bots on Discord.JS.",
  "author": "jackson-nestelroad",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jackson-nestelroad/panda.git"
  },
  "keywords": [
    "discord",
    "bot",
    "commands"
  ],
  "files": [
    "build/**/*",
    "!build/example"
  ],
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run format && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"example/**/*.ts\"",
    "version" : "npm run format",
    "example": "npm run build && node build/example/index"
  },
  "devDependencies": {
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "discord.js": "^13.0.0-dev.4d53d0f.1626523373"
  }
}
